<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountWork"
        mc:Ignorable="d"
        Title="Beställningsformulär kontoutdrag" Height="780" Width="840" MinWidth="840">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="220" />
            <ColumnDefinition Width="Auto" MinWidth="285" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label x:Name="titleLabel" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Beställning av elektroniska kontoutdrag och engagemang" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Height="31" Width="446"/>
        <Image x:Name="logo" Grid.Row="0" Grid.Column="2" Source="{StaticResource EbmLogo}" HorizontalAlignment="Right" Height="101" VerticalAlignment="Top" Width="300" Margin="0,10,10,0"/>
        <Label x:Name="ebNumberLabel" Grid.Row="0" Grid.Column="0" Content="EB-nummer" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="10,0,0,35" VerticalAlignment="Bottom" />
        <TextBox x:Name="ebNumberTextBox" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Height="Auto" Width="200" TextWrapping="Wrap" Margin="10,0,0,10" VerticalAlignment="Bottom" />
        <Label x:Name="aklLabel" Grid.Row="0" Grid.Column="1" Content="Åklagare" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="10,0,0,35" VerticalAlignment="Bottom" />
        <TextBox x:Name="aklTextBox" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="10,0,0,10" TextWrapping="Wrap" VerticalAlignment="Bottom" />
        <TabControl Grid.Column="0" Grid.ColumnSpan="3" x:Name="tabControl" HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Stretch" Margin="10,5,10,15" Width="Auto" Grid.Row="1">
            <TabItem Header="Engagemangsförfrågan">
                <Grid Margin="0,4,0,-4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <GroupBox x:Name="q1MandatoryGroupBox" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Header="Grundläggande uppgifter" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Grid.RowSpan="3" Height="213" Width="772">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="210" />
                                <ColumnDefinition Width="Auto" MinWidth="210" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label x:Name="bankLabel" Grid.Row="2" Grid.Column="0" Content="Specifik Bank" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="0,56,0,-22" VerticalAlignment="Top" />
                            <TextBox x:Name="bankTextBox" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="0,81,0,-43" TextWrapping="Wrap" VerticalAlignment="Top" />
                            <Label x:Name="clearingNumberLabel" Grid.Row="2" Grid.Column="1" Content="Specifikt Clearing-nr" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="0,56,0,-22" VerticalAlignment="Top" />
                            <TextBox x:Name="clearingNumberTextBox" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="0,81,0,-43" TextWrapping="Wrap" VerticalAlignment="Top" />
                            <Label x:Name="pnrLabel" Grid.Row="2" Grid.Column="0" Content="Personnummer" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="0,104,0,-70" VerticalAlignment="Top" />
                            <TextBox x:Name="pnrTextBox" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="0,129,0,-91" TextWrapping="Wrap" VerticalAlignment="Top" />
                            <Label x:Name="nameLabel" Grid.Row="2" Grid.Column="1" Content="Namn" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="0,104,0,-70" VerticalAlignment="Top" />
                            <TextBox x:Name="nameTextBox" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="0,129,0,-91" TextWrapping="Wrap" VerticalAlignment="Top" />
                            <Label x:Name="dateStartLabel" Grid.Row="2" Grid.Column="0" Content="Startdatum, period" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="0,152,0,-118" VerticalAlignment="Top" />
                            <DatePicker x:Name="dateStartDatePicker" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left"  Margin="0,177,0,-141" Width="200" VerticalAlignment="Top" FirstDayOfWeek="Monday" Text="Test" />
                            <Label x:Name="dateEndLabel" Grid.Row="2" Grid.Column="1" Content="Slutdatum, period" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="0,152,0,-118" VerticalAlignment="Top" />
                            <DatePicker x:Name="dateEndDatePicker" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left"  Margin="0,177,0,-141" Width="200" VerticalAlignment="Top" FirstDayOfWeek="Monday" />
                        </Grid>
                    </GroupBox>
                    <GroupBox x:Name="q1ExtraGroupBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Header="Övriga uppgifter från beslag, HTM eller annat" HorizontalAlignment="Stretch" Margin="10,210,10,0" VerticalAlignment="Top" Grid.RowSpan="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label x:Name="cardNumberLabel" Grid.Row="0" Grid.Column="0" Content="Kortnummer" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="10,10,0,0" VerticalAlignment="Top" />
                            <TextBox x:Name="cardNumberTextBox" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="10,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" />
                            <Label x:Name="phoneNumberLabel" Grid.Row="0" Grid.Column="1" Content="Tel till misstänkt" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="10,10,0,0" VerticalAlignment="Top" />
                            <TextBox x:Name="phoneNumberTextBox" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="10,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" />
                            <Label x:Name="bankCardReaderLabel" Grid.Row="1" Grid.Column="0" Content="Bankdosa (nummer)" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="10,0,0,0" VerticalAlignment="Top" />
                            <TextBox x:Name="bankCardReaderTextBox" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="10,25,10,10" TextWrapping="Wrap" VerticalAlignment="Top" />
                            <Label x:Name="phoneNumber2Label" Grid.Row="1" Grid.Column="1" Content="Tel som laddats från konto" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="10,0,0,0" VerticalAlignment="Top" />
                            <TextBox x:Name="phoneNumber2TextBox" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Height="Auto" Width="200" Margin="10,25,10,10" TextWrapping="Wrap" VerticalAlignment="Top" />
                        </Grid>
                    </GroupBox>
                    <Button x:Name="button" Grid.Row="2" Grid.Column="2"  Content="Beställ" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,395,10,0" Padding="5" Width="200" />
                    <CheckBox x:Name="checkBox" Grid.ColumnSpan="3" Content="Fråga samtliga banker (som EBM har avtal med)" HorizontalAlignment="Left" Height="15" Margin="20,63,0,0" VerticalAlignment="Top" Width="290"/>
                    <Button x:Name="searchClearing" Grid.ColumnSpan="3" Content="Sök" HorizontalAlignment="Left" Height="17" Margin="435,55,0,0" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.2,1.471" Grid.Row="2" FontSize="8">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-0.025"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem Header="Kontotecknarförfrågan">
                <Grid />
            </TabItem>
            <TabItem Header="Förenklat kontoutdrag">
                <Grid />
            </TabItem>
            <TabItem Header="Min beställningshistorik">
                <Grid />
            </TabItem>
            <TabItem Header="Administrera bankinfo">
                <Grid />
            </TabItem>
        </TabControl>
        <Label x:Name="bylineLabel" Grid.Row="2" Grid.Column="2" Content="Av Axel Thor och Henrik Almér för EBM" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Bottom" FontStyle="Italic" FontSize="9.333" Height="22" Width="168"/>
    </Grid>
</Window>
